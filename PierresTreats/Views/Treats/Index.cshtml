@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model IEnumerable<PierresTreats.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Any())
{
  <ul class="list-group">
    @foreach (Treat treat in Model)
    {
      <li class="list-group-item d-flex justify-content-between align-items-center">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
else
{
  <div class="text-center">
    <h3>No Ingreients have been added yet!</h3>
    <p>Click below to create one.</p>
  </div>
}
<br>

@Html.ActionLink("Add Treat", "Create", new { }, new { @class = "btn btn-primary"})
@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-primary"})
